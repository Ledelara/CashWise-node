generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  email               String  @unique
  password            String
  transactionPassword String
  balance             Float   @default(0.0)
  accountNumber       String  @unique
}
